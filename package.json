{
	"name": "front-end-template",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"start": "tsx ./scripts/start.ts",
		"start:vue": "cd templates/vue-template && pnpm run start",
		"start:react": "cd templates/react-template && pnpm run start",
		"test": "vitest --coverage.enabled --globals",
		"test:ui": "vitest --ui --open --coverage.enabled --globals",
		"prepare": "husky",
		"lint:eslint": "eslint --cache --fix && pnpm run lint:eslint-vue && pnpm run lint:eslint-react",
		"lint:eslint-vue": "cd templates/vue-template && pnpm run lint:eslint",
		"lint:eslint-react": "cd templates/react-template && pnpm run lint:eslint",
		"lint:format": "prettier --write --log-level warn \"templates/**/src/**/*.{js,ts,json,jsx,tsx,css,sass,less,vue,html,md}\"",
		"lint:stylelint": "stylelint \"**/*.{css,scss,vue,html}\" --cache --fix && pnpm run lint:stylelint-vue && pnpm run lint:stylelint-react",
		"lint:stylelint-vue": "cd templates/vue-template && pnpm run lint:stylelint",
		"lint:stylelint-react": "cd templates/react-template && pnpm run lint:stylelint",
		"clean": "rimraf -g \"**/node_modules\" & rimraf pnpm-lock.yaml & pnpm store prune",
		"update": "pnpm update -r"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@9.0.6+sha1.648f6014eb363abb36618f2ba59282a9eeb3e879",
	"dependencies": {
		"inquirer": "^9.2.23",
		"rimraf": "^5.0.7"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@mqy/eslint-config": "workspace:^",
		"@mqy/stylelint-config": "workspace:^",
		"@types/inquirer": "^9.0.7",
		"@types/node": "^20.14.0",
		"commitlint": "^19.3.0",
		"eslint": "^9.4.0",
		"eslint-define-config": "^2.1.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.5",
		"prettier": "3.2.5",
		"stylelint": "^16.6.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.11.0",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"**/vue-template/**/*.{js,ts,jsx,tsx,vue}": [
			"pnpm run lint:eslint-vue",
			"pnpm run lint:format"
		],
		"**/react-template/**/*.{js,ts,jsx,tsx}": [
			"pnpm run lint:eslint-react",
			"pnpm run lint:format"
		],
		"**/vue-template/**/*.{css,scss,sass,less,vue,html}": [
			"pnpm run lint:stylelint-vue"
		],
		"**/react-template/**/*.{css,scss,sass,less,vue,html}": [
			"pnpm run lint:stylelint-react"
		],
		"*.test.{js,jsx,ts,tsx}": [
			"vitest related --run --globals"
		]
	}
}
