{
	"name": "front-end-template",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"start": "node script/start.js",
		"start:vue": "vite templates/vue-template",
		"start:react": "vite templates/react-template",
		"test": "vitest --coverage.enabled --globals",
		"test:ui": "vitest --ui --open --coverage.enabled",
		"prepare": "husky",
		"lint:eslint": "pnpm run lint:eslint-vue & pnpm run lint:eslint-react",
		"lint:eslint-vue": "eslint --config templates/vue-template/eslint.config.mjs --cache --fix",
		"lint:eslint-react": "eslint --config templates/react-template/eslint.config.mjs --cache --fix",
		"lint:format": "prettier --write --log-level warn \"templates/**/src/**/*.{js,ts,json,jsx,tsx,css,sass,less,vue,html,md}\"",
		"lint:stylelint": "pnpm run lint:stylelint-vue & pnpm run lint:stylelint-react",
		"lint:stylelint-vue": "stylelint \"**/vue-template/**/*.{css,scss,vue,html}\" --cache --fix --config templates/vue-template/stylelint.config.mjs",
		"lint:stylelint-react": "stylelint \"**/react-template/**/*.{css,scss,vue,html}\" --cache --fix --config templates/react-template/stylelint.config.mjs",
		"clean": "rimraf -g \"**/node_modules\" & pnpm store prune"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@9.0.6+sha1.648f6014eb363abb36618f2ba59282a9eeb3e879",
	"dependencies": {
		"inquirer": "^9.2.20",
		"rimraf": "^5.0.5"
	},
	"devDependencies": {
		"@mqy/eslint-config": "workspace:^",
		"@mqy/stylelint-config": "workspace:^",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@types/node": "^20.12.10",
		"commitlint": "^19.3.0",
		"eslint": "^9.1.1",
		"eslint-define-config": "^2.1.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "3.2.5",
		"stylelint": "^16.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"**/vue-template/**/*.{js,ts,jsx,tsx,vue}": [
			"pnpm run lint:eslint-vue",
			"pnpm run lint:format"
		],
		"**/react-template/**/*.{js,ts,jsx,tsx}": [
			"pnpm run lint:eslint-react",
			"pnpm run lint:format"
		],
		"**/vue-template/**/*.{css,scss,sass,less,vue,html}": [
			"pnpm run lint:stylelint-vue"
		],
		"**/react-template/**/*.{css,scss,sass,less,vue,html}": [
			"pnpm run lint:stylelint-react"
		],
		"*.test.{js,jsx,ts,tsx}": [
			"vitest related --run --globals"
		]
	}
}
